import java.util.Scanner;

public class Test2 {
	public static void main(String[] args) {
		
		Scanner scn = new Scanner(System.in);
		
		System.out.println("Give the frist Number");
		int num1 = scn.nextInt();
		
		System.out.println("Give the second Number");
		int num2 = scn.nextInt();
		
		System.out.println("Give the third Number");
		int num3 = scn.nextInt();
		
		System.out.println(getNumber(num1, num2, num3)+ " is the highest number");
	}
	
		static int getNumber (int num1,int num2,int num3) {
			
		int num4 = 0;
				
		if (num1 >num2) {
			num4 = num1;
		}
		if (num2 > num3){
			num4 = num2;
		}
		if (num3> num1){
			num4 = num3;
		}
		return num4;
	}
}
